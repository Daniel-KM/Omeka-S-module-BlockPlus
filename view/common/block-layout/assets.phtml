<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var array $assets Contains AssetRepresentation and optional url and label.
 * @var string $heading
 * @var string $misc
 */

?>
<div class="block-assets">
    <?php if ($heading): ?>
    <h2><?= $heading ?></h2>
    <?php endif; ?>

    <?php foreach ($assets as $asset): ?>
    <div class="asset">
        <?php if ($asset['url']): ?>
        <a href="<?= $asset['url'] ?>"<?php if (filter_var($asset['url'], FILTER_VALIDATE_URL)): ?> target="_blank"<?php endif; ?>>
            <img src="<?= $asset['asset']->assetUrl() ?>" alt="<?= $asset['label'] ?>"/>
        </a>
        <?php else: ?>
        <img src="<?= $asset['asset']->assetUrl() ?>" alt="<?= $asset['label'] ?>"/>
        <?php endif; ?>
    </div>
    <?php endforeach; ?>
</div>
