<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var string $html
 * @var string $divclass
 * @var string $heading
 */

$escape = $this->plugin('escapeHtml');
?>

<?php if (!empty($heading)): ?>
<h2><?= $escape($heading) ?></h2>
<?php endif; ?>
<?php if (empty($divclass)): ?>
<?= $html ?>
<?php else: ?>
<div class="<?= $this->escapeHtmlAttr($divclass) ?>">
    <?= $html ?>
</div>
<?php endif; ?>
